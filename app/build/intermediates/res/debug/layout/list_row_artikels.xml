<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_row_selector"
    android:padding="8dp">

    <!-- Thumbnail Image -->
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/thumbnail"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="8dp" />

    <!-- Movie Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title"
        android:textStyle="bold"
        android:textColor="@color/genre"
        android:text="Title"
        android:layout_below="@+id/tanggal"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_alignRight="@+id/hit"
        android:layout_alignEnd="@+id/hit" />

    <!-- Rating -->
    <TextView
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/genre"
        android:textSize="@dimen/rating"
        android:text="content"
        android:layout_below="@+id/thumbnail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <!-- Genre -->
    <TextView
        android:id="@+id/tanggal"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textColor="@color/genre"
        android:textSize="@dimen/genre"
        android:text="tanggal"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/thumbnail" />

    <!-- Release Year -->
    <TextView
        android:id="@+id/hit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/genre"
        android:textSize="@dimen/year"
        android:text="Hit"
        android:layout_alignBottom="@+id/tanggal"
        android:layout_alignRight="@+id/content"
        android:layout_alignEnd="@+id/content" />

    <TextView
        android:id="@+id/id_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/genre"
        android:textSize="@dimen/year"
        android:text="id_content"
        android:layout_alignBottom="@+id/thumbnail"
        android:layout_alignLeft="@+id/title"
        android:layout_alignStart="@+id/title"
        android:visibility="gone"/>

</RelativeLayout><!-- From: file:/D:/android/mr/mr/app/src/main/res/layout/list_row_artikels.xml -->